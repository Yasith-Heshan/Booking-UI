{
  "compilerOptions": {
    "skipLibCheck": true,
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noImplicitThis": true,
    "outDir": "./dist/",
    "paths": {
      "src": ["src"]
    },
    "sourceMap": true,
    "strictNullChecks": false,
    "strict": true,
    "target": "es6",
    "typeRoots": [
      "./node_modules/@types",
      "./typings"
    ]
  },
  "exclude" : [
    "node_modules"
  ]
}
